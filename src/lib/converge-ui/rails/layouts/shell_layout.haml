!!!
%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    = favicon_link_tag 'favicon.png'
    %title
      = yield :title
    = yield :stylesheets
    = yield :head

  %body
    %header#header
      = render :partial => "layouts/converge-ui/header_layout"
    %article#maincontent
      %section
        = yield :content
    %footer
      %span
        = redhat_string.html_safe
      %p.copyright
        = copyright_string.html_safe
      / mawagner - FIXME - These links should either go somewhere, or be removed.
      / %ul
      /   %li
      /     %a{ "href" => "#" }
      /       #{_translate("Disclaimer")}
      /   %li
      /     %a{ "href" => "#" }
      /       #{_translate("Terms of Use")}
      /   %li
      /     %a{ "href" => "#" }
      /       #{_translate("Support")}
      = yield :footer

    = yield :javascript
    = yield :extra
