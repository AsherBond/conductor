= render :partial => 'layouts/admin_header'

%header.page-header
  %h1{:class => controller.controller_name}= @pool.name
  #obj_actions.button-container
    = link_to 'New Pool', new_pool_url, :class => 'button primary', :id => 'new_pool_button'
    .button-group
      = link_to 'Cancel Editing', pool_path(@pool), :class => 'button pill danger', :id => 'new_user_button'
  .corner &nbsp;

%section.content-section.user
  %header
    %h2
      Edit pool
      = @pool.name

  .content
    = render :partial => 'form'
