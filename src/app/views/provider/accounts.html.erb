<% if @provider.cloud_accounts.size == 0 %>
<h1>There are no accounts to display</h1>
<% else %>
    <table>
      <thead>
        <tr>
        <th scope="col">Username</th>
        </tr>
      </thead>
      <tbody>
  <%@provider.cloud_accounts.each {|acct| %>
        <tr>
          <td><%= acct.username %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
<% end %>
<%= link_to "Add an account", {:action => "new_account", :id => @provider}, :class => "actionlink" %>
