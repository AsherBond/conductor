<% content_for :scripts do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $("#provider-tabs").tabs();
    });
  </script>
<% end %>

<div id="provider-tabs">
  <ul>
    <li><%= link_to "Accounts",  {:action => "accounts", :id => @provider.id, :ajax => true} %></li>
    <li><%= link_to "Realms",  {:action => "realms", :id => @provider.id, :ajax => true } %></li>
    <% if has_view_perms? %>
      <li><%= link_to "User access",  {:controller => "permissions", :action => "list", :provider_id => @provider.id, :ajax => true } %></li>
    <% end %>
    <li><%= link_to "Settings", {:action => "settings", :id => @provider.id, :ajax => true} %></li>
  </ul>
</div>
