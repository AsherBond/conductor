- if @role.errors.any?
  = render 'layouts/error_messages', :object => @role
%fieldset
  = form.label :name, t('roles.form.name')
  = form.text_field :name, :class => "em long"
%fieldset.options
  = form.submit t('save'),  :class => "submit button"
  = link_to t(:cancel), roles_path, :class => 'button button'
