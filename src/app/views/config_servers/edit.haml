= render :partial => 'layouts/admin_header'
%header.page-header
  %h1{:class => controller.controller_name}= "#{@provider_account.name} Config Server"
  #obj_actions.button-container
    %div.button-group
      = link_to 'Cancel Editing', provider_account_path(@provider_account), :class => 'button pill danger', :id => 'cancel_config_server_edit'
  .corner &nbsp;

%section.content-section.config_server
  %header
    %h2 Edit Config Server

  .content
    = error_messages_for :config_server
    %h2
      = t('config_servers.edit.edit_config_server')
    - form_tag(config_server_path, { :method => :put }) do
      = render :partial => 'config_server_form', :locals => {:from => "edit"}
      -#%fieldset.clearfix
        .grid_13.alpha.omega
          = submit_tag t(:save), :class => "ra nomargin dialogbutton"
