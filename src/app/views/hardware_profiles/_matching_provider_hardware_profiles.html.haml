- if @matching_hwps.size > 0
  %table.flat
    %thead
      = sortable_table_header @provider_hwps_header
    - @matching_hwps.each do |hwp|
      %tr{:class => cycle('nostripe','stripe')}
        %td
          - if hwp.provider
            = link_to hwp.provider.name, provider_path(hwp.provider)
        %td
          = link_to hwp.name, hardware_profile_path(hwp)
        %td
          =hwp.architecture.to_s
        %td
          =hwp.memory.to_s
        %td
          =hwp.storage.to_s
        %td
          =hwp.cpu.to_s
- else
  %h3
    No Matching Provider Hardware Profiles Could be found
