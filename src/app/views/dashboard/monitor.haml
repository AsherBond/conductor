        %input{ :type => 'radio', :checked => 'checked', :name => 'time1', :id => 'five' }
        %label{ :for => 'five' } 1 month

  %div{ :class => 'grid_8 omega' }
    %h4.legend Graph key:
    %ul.block.graphkey
      %li.instances
        Instances
      %li.requests
        Requests
      %li.ttl
        Time to Launch
      %li.failures
        Failures
