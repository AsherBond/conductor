.dcloud_form
  = error_messages_for 'pool'
  = error_messages_for 'account'
  %h2 Create a new Pool
  %br/
  - form_tag :action => 'create' do
    %legend Pool
    %ul
      %li
        %label
          Name
          %span Provide a descriptive name for this pool.
        = text_field :pool, :name
    = submit_tag "Save", :class => "submit"
