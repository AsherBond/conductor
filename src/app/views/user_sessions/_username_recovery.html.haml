.card_container#username_recovery_container
  .card
    %p
      = t('user_sessions.new.login_unknown_info')
      = link_to t('user_sessions.new.return_to_login'), "#", :id => "username_return_link"
    = form_tag user_session_path, :method => :get, :id => "login_recovery_form", :remote => true do
      %fieldset.primary
        = label_tag :email
        = text_field_tag :email, params[:email]
      %fieldset.primary.hidden
      %div.group.secondary_actions
        %span
      = submit_tag t('user_sessions.new.send_login'), :class => 'button fr', :disabled => true
