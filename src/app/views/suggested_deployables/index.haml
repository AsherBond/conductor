= render :partial => 'layouts/admin_header'
= render :partial => 'section_header'

%section.content-section.roles
  %header
    %h2 Deployables List
    %span.label.badge.dark.count= @suggested_deployables.length

  .content
    - form_header = capture_haml do
      = restful_submit_tag "Delete", "destroy", multi_destroy_suggested_deployables_path, 'DELETE', :id => 'delete_button', :class => 'button danger'
    = filter_table(@header, @suggested_deployables, :form_header => form_header) do |deployable|
      %table#deployables_table.checkbox_table
        %tr
          %td
            %input{:name => "suggested_deployables_selected[]", :type => "checkbox", :value => deployable.id, :id => "suggested_deployable_checkbox_#{deployable.id}" }
          %td
            = link_to deployable.name, suggested_deployable_path(deployable.id)
          %td
            = deployable.url
