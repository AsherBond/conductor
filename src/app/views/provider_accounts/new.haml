= render :partial => 'layouts/admin_nav'
%header.admin-page-header
  %h1 New Provider Account
  #obj_actions
    Return to:
    = link_to "Cloud Providers", edit_provider_path(@provider, :view => 'filter', :details_tab => 'connectivity'), :class => 'rounded-link'

%section.admin-content-section.provider_accounts
  .content
    - unless @providers.empty?
      = form_for([@provider, @provider_account], :html => {:multipart => true, :class => 'generic'})  do |f|
        = render :partial => "form", :locals => { :form => f }
        %fieldset.options
          = f.submit 'Save', :class => "button pill", :id => 'save'
