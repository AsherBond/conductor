= render :partial => 'layouts/admin_nav'
%header.admin-page-header
  %h1
    Account:
    = @provider_account.name
  #obj_actions
    Return to:
    = link_to "Cloud Providers", edit_provider_path(@provider, :view => 'filter', :details_tab => 'connectivity'), :class => 'rounded-link'

%section.admin-content-section
  %header
    %h2 Properties
    .section-controls
      #obj_actions.button-container
        .button-group
          %span.view-toggle
            = link_to "", provider_provider_account_path(@provider, @provider_account), :class => "view-toggle pretty active", :title => "Provider Account Detail"
            = link_to "", edit_provider_provider_account_path(@provider, @provider_account), :class => "view-toggle filter", :title => "Edit Provider Account"

  .content
    = render :partial => 'properties'
