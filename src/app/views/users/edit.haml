- if check_privilege(Privilege::MODIFY, User)
  %h2 Editing User: #{@user.first_name} #{@user.last_name}
- else
  %h2 Editing Account

- form_for @user, :url => user_path(@user), :html => { :method => :put } do |f|
  = render :partial => "form", :locals => { :form => f, :cancel_path => users_path }
