= render :partial => 'layouts/admin_nav'
%header.admin-page-header
  %h1.users New User
  #obj_actions
    Return to:
    = link_to "Users & Groups", users_path, :class => 'rounded-link'

%section.admin-content-section.users
  .content
    .align-center
      %p
        %strong Enter necessary information about your new user and click "Create User" when you are finished.
        %br
        %br
    #user_card.user_form_card
      %header.user-card-header
        %h2
          %span#first_name &nbsp;
          %span#last_name &nbsp;
      .user-card-content
        %dl
          %dt E-mail Address
          %dd#email &nbsp;
          %dt Username
          %dd#login &nbsp;
    = form_for @user, :url => users_path, :html => {:class => 'generic'} do |f|
      -if current_user
        = render :partial => "form", :locals => { :form => f }
      -else
        = render :partial => "form", :locals => { :form => f }

:javascript
    if ($('input:text#user_first_name').val() != "")
    {
      $('span#first_name').text($('input:text#user_first_name').val());
    }

    if ($('input:text#user_last_name').val() != "")
    {
      $('span#last_name').text($('input:text#user_last_name').val());
    }

    if ($('input:text#user_email').val() != "")
    {
      $('dd#email').text($('input:text#user_email').val());
    }

    if ($('input:text#user_login').val() != "")
    {
      $('dd#login').text($('input:text#user_login').val());
    }
